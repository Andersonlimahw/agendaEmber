<form id="edit-todo-form">
	<div class="form-group">
		<label>Title</label>
		{{input type="text" class="form-control" value=model.title placeholder="Add Todo..."}}
	</div>

	<div class="form-group">
		<label>Due Date</label>
		{{input type="date" class="form-control" value=model.date }}
	</div>

	<div class="form-group">
		<label>Body</label>
		{{textarea class="form-control" value=model.body placeholder="Todo Body..."}}
	</div>

	<button class="btn btn-info" {{action 'editTodo'
	  model.id}}>
		Submit
	</button>

	

	{{#link-to 'todos' class="btn btn-warning"}} Close {{/link-to}}

	<button class="btn btn-danger pull-right" {{action 'deleteTodo'
	  model.id}}>
		Delete
	</button>
	
</form>


